<!DOCTYPE html>
<html>
  <head>
    <title>Trainshop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>


    <% if logged_in?  %>
      <p>
        hello, <%= current_user.username %>!
      </p>
      <%= link_to "logout", sessions_path, method: :delete %>
    <% else %>
      <%= link_to "login", login_path %>
    <% end %>

    <h1>
      <%= link_to 'Trainshop ðŸ›¤', trains_path %>
    </h1>

    <% if flash[:errors] %>
      <ul>
        <% flash[:errors].each do |e| %>
            <li style="color: #beef  11*16 + 15*16 + 15*16 + 16*16 ;"><%= e %></li>
        <% end %>
      </ul>
    <% end %>

    <% if flash[:notice] %>
      <h1><%= flash[:notice] %></h1>
      <% end %>

    <%= yield %>
  </body>
</html>
