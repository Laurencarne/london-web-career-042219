<h2>Create new Dog</h2>

<a href="/dogs">Go back</a>

<form action="/dogs" method="post">
  <div>
    <label>Name:</label>
    <input type="text" name="dog[name]" />
  </div>
  <div>
    <label>Age:</label>
    <input type="text" name="dog[age]" />
  </div>
  <select name="dog[owner_id]">
    <% @owners.each do |owner| %>
      <option value="<%= owner.id %>"><%= owner.name %></option>
    <% end %>
  </select>
  <p>Select toys that this dog will have:</p>

  <% @toys.each do |toy| %>
    <input
      type="checkbox"
      value="<%= toy.id %>"
      id="toy-<%= toy.id %>"
      name="dog[toy_ids][]"
    >
    <label for="toy-<%= toy.id %>"><%= toy.name %></label>
  <% end %>

  <br>

  <input type="submit" value="Create new Dog" />
</form>
